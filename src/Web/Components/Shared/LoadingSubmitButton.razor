@rendermode RenderMode.InteractiveServer

<MudButton ButtonType="ButtonType.Submit"
    Color="Color.Primary"
    Variant="@Variant" 
    Size="@Size" 
    FullWidth="@IsFullWidth"
    Disabled="IsDisabled || IsProcessing"
    StartIcon="@Icon"
    Class="@Class">

    @if (IsProcessing)
    {
        <MudProgressCircular Class="ms-n1 mr-2" Size="Size.Small" Indeterminate="true" />
    }

    @DisplayText

</MudButton>

@code {

    private string DisplayText => IsProcessing ? "Please Wait" : Text;

    [Parameter]
    public string Text { get; set; } = "Submit";

    [Parameter]
    public string? Icon { get; set; } = null;

    [Parameter]
    public string? Class { get; set; } = "mt-6";

    [Parameter]
    public bool IsProcessing { get; set; } = false;

    [Parameter]
    public bool IsDisabled { get; set; } = false;

    [Parameter]
    public bool IsFullWidth { get; set; } = true;

    [Parameter]
    public Variant Variant { get; set; } = Variant.Filled;

    [Parameter]
    public Size Size { get; set; } = Size.Large;
}
