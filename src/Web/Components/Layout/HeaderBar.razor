<MudAppBar Elevation="0" Dense="true" Fixed="true" DisableGutters="true">

    @if (IncludeIcon) 
    {
        <MudIconButton Href="/"
            Icon="@Icons.Custom.Brands.MudBlazor"
            Size="Size.Large"
            Color="Color.Primary" />
    }

    <MudToolBar DisableGutters="true">

        <!-- TODO: Search input to go into the middle? -->

    </MudToolBar>

    <MudSpacer />

    <MudToolBar DisableGutters="true">

        <CustomThemeProvider Theme="theme" />

        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/melittleman/BlazorAdminDashboard" Target="_blank" />

        <LoginDisplay />

    </MudToolBar>
</MudAppBar>

@code {

    // TODO: Figure out where this is loaded from? Somewhere on the tenant ideally.
    private static CustomTheme theme = new();

    [Parameter]
    public bool IncludeIcon { get; set; } = true;
}