<CascadingValue Value=false Name="UsePopoverProvider">

    <MudThemeProvider Theme="Theme" DefaultScrollbar="false"/>
</CascadingValue>

@code {

    // TODO: Where do we want to get this from?
    public static MudTheme Theme => new()
    {
        Palette = new PaletteLight()
        {
            Primary = "#262937",
            Secondary = "#f4b43a",
            DrawerBackground = "#262937",
            AppbarBackground = "#9e9e9e",
            DrawerText = "#f4b43a"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#262937",
            Secondary = "#f4b43a",
            DrawerBackground = "#262937",
            AppbarBackground = "#9e9e9e",
            DrawerText = "#f4b43a"
        },
        ZIndex = new ZIndex()
        {
            // This forces the Drawer to open over the top off 
            // everything else including the app header bar.
            Drawer = 9999
        }
    };
}